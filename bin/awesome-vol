#!/usr/bin/env bash
set -eu -o pipefail
if ponymix is-muted; then
    printf 'ğŸ”‡\n'
else
    vol="$(ponymix get-volume)"
    if (( vol < 33 )); then
        icon=ğŸ”ˆ
    elif (( vol < 66 )); then
        icon=ğŸ”‰
    else
        icon=ğŸ”Š
    fi
    printf '%s%s%%\n' \
           "$icon" \
           "$vol"
fi
